local countMw = addIcon("MW", {text="", item = 3180}, -- id del icono que quieres que se vea, normalmente del mismo item.
function(widget,isOn)
   local id = 3180 -- id del item que quieres contar
   local contar = macro(1000,function() 
      local countItem = itemAmount(id)
      widget.text:setText(countItem.."\n")
      widget.text:setColor("white")
   end)
   contar:setOn()
end)
countMw:breakAnchors()
countMw:move(200,300)

